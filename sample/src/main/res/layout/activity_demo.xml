<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DemoActivity"
    android:orientation="vertical">

    <com.jmedeisis.windowview.WindowView
        android:id="@+id/windowView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/london_wide"
        android:contentDescription="@string/content_description" />

    <com.jmedeisis.windowview.WindowView
        android:id="@+id/windowView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/singapore_tall"
        android:contentDescription="@string/content_description"
        app:orientationMode="Relative"
        app:translateMode="Constant" />

</LinearLayout>